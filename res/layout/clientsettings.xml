<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="persistentNotification"
        android:summary="Hint to android not to kill smsapp"
        android:title="Persistent notification" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="newMessageNotification"
        android:title="New Message Notification" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="startAtBoot"
        android:summary="Launch at boot?"
        android:title="Start at phone boot" >
    </CheckBoxPreference>
