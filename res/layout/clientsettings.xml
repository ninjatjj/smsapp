<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="persistentNotification"
        android:summary="Hint to android not to kill smsapp"
        android:title="Persistent notification" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="newMessageNotification"
        android:title="New Message Notification" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="startAtBoot"
        android:summary="Also enables launch at boot"
        android:title="Run as background service" >
    </CheckBoxPreference>
    
    <EditTextPreference
        android:enabled="true"
        android:key="wifiAddress"
        android:title="Server IP Address" >
    </EditTextPreference>

    <Preference
        android:key="changeMode"
        android:title="Change client/server mode" >
    </Preference>
</PreferenceScreen>