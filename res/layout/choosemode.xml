<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:text="Choose the mode you would like smsapp to start in:"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:text="Select server mode if your device has SMS capabilities"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:text="Select client if you would like to connect to an smsapp server to be able to send SMS even if your device does not have native SMS capabilities"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:text="Once the client has started, select &quot;Settings&quot; and enter the servers IP address, multiple addresses can be enterred separated by a comma in case you move your devices between networks - only one connection is used at a time"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:text="To find the servers ip address, you must open the &quot;Settings&quot; on the server device within which you will find the details listed"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

</LinearLayout>